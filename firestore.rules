rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // 輔助函式：檢查是否已登入
    function isSignedIn() {
      return request.auth != null;
    }

    // 1. 許願池 (Wishlist)
    // 規則：只有「已登入」的使用者可以查看、新增或投票
    match /wishlist/{document=**} {
      allow read, write: if isSignedIn();
    }

    // 2. 行程資料 (Itinerary) - 如果未來行程也存入資料庫
    // 規則：允許所有人查看，只有登入者可操作
    match /itinerary/{document=**} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // 3. 行李清單 (Packing Lists)
    // 規則：使用者只能讀寫自己的清單 (依據 User ID)
    match /packing_lists/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 4. 預設阻擋其他未定義的路徑 (安全)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
